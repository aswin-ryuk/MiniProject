<div class="panel panel-primary">
  <div class="panel-heading">
    <span class="glyphicon glyphicon-edit"></span> &nbsp; <b> <%= params[:action].capitalize %> </b>
  </div>
  <div class="panel-body">
    <%= f.input :name %>
    <%= f.input :description %>
    <%#= f.input :position %>
    <%= f.input :active, as: :boolean,
                checked_value: 'Y',
                unchecked_value: 'N',
                length: 10,
                wrapper: :horizontal_radio_and_checkboxes,
                input_html: { checked: @course.new_record? ? true : @course.is_activated?,
                class: 'input-xlarge' },
                required: true %>
    <%= f.submit submit_btn_text , class: 'btn btn-primary submit-button' %>
  </div>
</div>

