<% path = (defined?(path) and !path.nil?) ? path : '' %>

<div class="dropdown">
  <button type="button" class="btn btn-primary dropdown-toggle pull-right js_dropdown_txt" data-toggle="dropdown">
    Filter
  </button>
  <div class="dropdown-menu">
    <a class="dropdown-item js_btn_filter" data-url="<%= path %>" data-value="all" href="javascript:void(0);">All</a>
    <a class="dropdown-item js_btn_filter" data-url="<%= path %>" data-value="active" href="javascript:void(0);">Active</a>
    <a class="dropdown-item js_btn_filter" data-url="<%= path %>" data-value="inactive" href="javascript:void(0);">Inactive</a>
  </div>
</div>